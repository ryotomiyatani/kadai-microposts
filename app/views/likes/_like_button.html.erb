<% if current_user.like?(micropost) %>
   <%= form_for(current_user.likes.find_by(micropost_id: micropost.id), html:{method: :delete}) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Unlike', class: 'btn btn-danger btn-block',class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
    <%= form_for(current_user.likes.build(micropost_id: micropost.id)) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-block',class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>
